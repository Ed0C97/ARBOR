# ============================================
# A.R.B.O.R. Enterprise - Environment Variables
# ============================================
# Copy this file to .env and fill in values

# ---- Application ----
APP_NAME=arbor-enterprise
APP_ENV=development
APP_DEBUG=true
APP_VERSION=1.0.0
APP_SECRET_KEY=change-me-to-a-random-secret-key

# ---- Backend Server ----
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_WORKERS=4
BACKEND_RELOAD=true

# ---- PostgreSQL ----
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=arbor
POSTGRES_USER=arbor
POSTGRES_PASSWORD=change-me
DATABASE_URL=postgresql+asyncpg://arbor:change-me@localhost:5432/arbor

# ---- Qdrant ----
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION=entities_vectors

# ---- Neo4j ----
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=change-me

# ---- Redis ----
REDIS_URL=redis://localhost:6379/0

# ---- OpenAI ----
OPENAI_API_KEY=sk-your-openai-key
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ---- Azure OpenAI (Fallback) ----
AZURE_API_KEY=
AZURE_API_BASE=
AZURE_API_VERSION=2024-02-15-preview

# ---- Anthropic (Fallback) ----
ANTHROPIC_API_KEY=

# ---- Groq (Fast/Cheap) ----
GROQ_API_KEY=

# ---- Google APIs ----
GOOGLE_MAPS_API_KEY=
GOOGLE_PLACES_API_KEY=

# ---- Auth0 ----
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_API_AUDIENCE=https://api.arbor.io
AUTH0_CLIENT_ID=
AUTH0_CLIENT_SECRET=

# ---- Langfuse (LLM Observability) ----
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com

# ---- Kafka ----
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# ---- Cohere (Reranking) ----
COHERE_API_KEY=

# ---- Temporal.io ----
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=default

# ---- Observability ----
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=arbor-api

# ---- Frontend ----
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_AUTH0_DOMAIN=your-tenant.auth0.com
NEXT_PUBLIC_AUTH0_CLIENT_ID=
NEXT_PUBLIC_MAPBOX_TOKEN=
